<div class="profile span6">
  <div class="image">
    <img src="{{portrait_url}}" />
  </div>
  <div class="details">
    <h2 class="name">{{name}}</h2>
    <p class="title">{{title}}</p>

    <div class="social-icons">
      {{#each social_links}}
        <a href="{{url}}"><span class="social {{name}}"></span></a>
      {{/each}}
    </div>
    <div class="btn-group">
      <a class="btn resume" href="{{resume_url}}">
        <span class="small">Download</span>
        <span>Resume</span>
      </a>
      <a class="btn projects" href="javascript:;" data-profile="{{shortname}}">
        <span class="small">View</span>
        <span>Projects</span></a>
    </div>
  </div>
</div>